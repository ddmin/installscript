# start sudo timer
sudo echo ""

# install stardict
yes | sudo apt install sdcv

wget https://web.archive.org/web/20140428003644/http://abloz.com/huzheng/stardict-dic/dict.org/stardict-dictd_www.dict.org_gcide-2.4.2.tar.bz2

sudo mkdir -p /usr/share/stardict/dic/

sudo tar -xvjf  stardict-dictd_www.dict.org_gcide-2.4.2.tar.bz2 -C /usr/share/stardict/dic

rm stardict-dictd_www.dict.org_gcide-2.4.2.tar.bz2
