#!/bin/bash
# 3install -  minimal configurations to a fresh Arch install

# update system
    sudo pacman -Syyu

# dependencies
    sudo pacman -S base-devel curl wget xz git
    sudo pacman -S python python-pip

# fonts
    sudo pacman -S noto-fonts

# picom
    sudo pacman -S picom

# yay
    git clone https://aur.archlinux.org/yay.git /tmp/yay
    cd /tmp/yay
    makepkg -si
    cd -

# utilities
    sudo pacman -S vim ranger htop rxvt-unicode dmenu

# graphical environment
    sudo pacman -S xorg-server xorg-xinit xterm
    cp /etc/X11/xinit/xinitrc ~/.xinitrc
    echo "exec i3" >> ~/.xinitrc

    sudo pacman -S sddm
    sudo systemctl enable sddm

    sudo pacman -S i3-gaps i3status
    pip install i3ipc

echo 'Setup Complete'
echo 'Please reboot your machine.'
